+{
+	if (!strncmp(name, "wcove_ccsm", strlen("wcove_ccsm")))
+		return INTEL_PMIC_WCOVE;
+	else if (!strncmp(name, "scove_ccsm", strlen("scove_ccsm")))
+		return INTEL_PMIC_SCOVE;
+	else if (!strncmp(name, "bcove_ccsm", strlen("bcove_ccsm")))
